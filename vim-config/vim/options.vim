" Line numbers
set number
set relativenumber

" System clipboard
set clipboard=unnamedplus

" Indentation
filetype plugin indent on
set autoindent
set smartindent
set expandtab
set shiftwidth=2
set softtabstop=2
set tabstop=4
set backspace=indent,eol,start

" Syntax highlighting
syntax on

" Status line
set laststatus=2
